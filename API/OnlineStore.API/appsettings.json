{
  "app": {
    "name": "OnlineStore"
  },
  "auth": {
    "issuerSigningKey": "ubeeg2aigeiDongei1Ni3oel5az2oes0vohd6ohweiphaoyahP",
    "issuer": "trill",
    "validIssuer": "trill",
    "validateAudience": false,
    "validateIssuer": true,
    "validateLifetime": true,
    "expiry": "10:00:00"
  },
  "logger": {
    "level": "information",
    "excludePaths": ["/", "/ping", "/metrics"],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "secret"
    },
    "tags": {}
  },
  "mongo": {
    "connectionString": "mongodb://localhost:27017",
    "database": "OnlineStore",
    "disableTransactions": true
  },
  "postgres": {
    "connectionString": "Host=localhost;Database=OnlineStore;Username=postgres;Password="
  },
  "messaging": {
    "useBackgroundDispatcher": true,
    "inbox": {
      "enabled": true,
      "collectionName": "inbox"
    },
    "outbox": {
      "enabled": true,
      "collectionName": "outbox",
      "interval": "00:00:01"
    }
  },
  "rabbitMq": {
    "connectionName": "modular-monolith",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "modular-monolith"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "modular-monolith/{{exchange}}.{{message}}"
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "spanContextHeader": "span_context",
    "vault": {
      "enabled": false,
      "url": "http://localhost:8200",
      "authType": "token",
      "token": "secret",
      "kv": {
        "enabled": false,
        "path": "trill/settings"
      }
    },
	
	"ReverseProxy": {
    "Routes": [
      {
        "RouteId": "productapp",
        "ClusterId": "productappcluster",
        "Match": {
          "Path": "/product-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product-api" },
          { "PathPrefix": "/api" },
          {
            "X-Forwarded": "proto,host,for,pathbase",
            "Append": "true",
            "Prefix": "X-Forwarded-"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      {
        "RouteId": "customerapp",
        "ClusterId": "customerappcluster",
        "Match": {
          "Path": "/customer-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/customer-api" },
          { "PathPrefix": "/api" },
          {
            "X-Forwarded": "proto,host,for,pathbase",
            "Append": "true",
            "Prefix": "X-Forwarded-"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      {
        "RouteId": "settingapp",
        "ClusterId": "settingappcluster",
        "Match": {
          "Path": "/setting-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/setting-api" },
          { "PathPrefix": "/api" },
          {
            "X-Forwarded": "proto,host,for,pathbase",
            "Append": "true",
            "Prefix": "X-Forwarded-"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    ],

    "Clusters": {
      "productappcluster": {
        "Destinations": {
          "productappcluster/destination1": {
            "Address": "http://productapp"
          }
        }
      },
      "customerappcluster": {
        "Destinations": {
          "customerappcluster/destination1": {
            "Address": "http://customerapp"
          }
        }
      },
      "settingappcluster": {
        "Destinations": {
          "settingappcluster/destination1": {
            "Address": "http://settingapp"
          }
        }
      }
    }

	
  }
}
